@if (ToastList.Any())
{
    <div class="toasts-top-right fixed ">

        <CascadingValue Value="this">

            @foreach (var toast in ToastList.OrderBy(x => x.TimeStamp))
            {
                <BlazoredToast ToastSetting="toast.toastSettings" ToastId="toast.Id" />

            }

        </CascadingValue>

    </div>

}