@using System.Security.Claims
@using TaskMasterRazorClassLibrary.Config

<div class="toast @ToastSetting.BaseClass fade show" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <i class="mr-2 @ToastSetting.IconClass fa-lg"></i>
        <strong class="mr-auto">@ToastSetting.Heading</strong>
        <small>@DateTime.Now.ToString("HH:mm")</small><button data-dismiss="toast" type="button" class="ml-2 mb-1 close" aria-label="Close" @onclick="@Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="toast-body">
        @ToastSetting.Message
    </div>
</div>


@code {

    [CascadingParameter]
    private BlazoredToasts toastContainer { get; set; }


    [Parameter] public Guid ToastId { get; set; }
    [Parameter] public ToastSettings ToastSetting { get; set; }

    private void Close()
    {
        toastContainer.RemoveToast(ToastId);
    }

}